<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sepay.backend.history.mapper.HistoryMapper">
    <select id="selectByUserNo" parameterType="SearchItem" resultType="HistoryDTO">
        SELECT *
        FROM history h
        JOIN song_account sa ON h.song_no = sa.song_no
        JOIN krw_account ka ON h.krw_no = ka.krw_no
        WHERE h.user_no = #{userNo}
        <if test="typeCode != null">
            AND h.type_code = #{typeCode}
        </if>
        <if test="stateCode != null">
            AND h.state_code = #{stateCode}
        </if>
        <if test="beginDate != null and endDate != null">
            AND h.history_date BETWEEN #{beginDate} AND #{endDate}
        </if>
        ORDER BY h.history_date DESC
    </select>

