<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sepay.backend.myaccount.mapper.MyAccountMapper">
    <select id="selectKrwAccount" parameterType="int" resultType="krwAccountDTO">
        select *
        from krw_account
        where user_no = #{userNo}
    </select>

    <select id="selectSongAccount" parameterType="int" resultType="songAccountDTO">
        select *
        from song_account
        where user_no = #{userNo}
    </select>
    <select id="findSongAccountBalance" parameterType="Integer" resultType="songAccountDTO">
        SELECT sa.balance
        FROM song_account sa
        JOIN user u ON sa.song_no = u.song_no
        WHERE u.user_no = #{userNo}
    </select>

</mapper>