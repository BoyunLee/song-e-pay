<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sepay.backend.myaccount.mapper.MyAccountMapper">
    <select id="selectKrwAccount" parameterType="String" resultType="krwAccountDTO">
        select *
        from krw_account
        where krw_no = #{krwNo}
    </select>

    <select id="selectSongAccount" parameterType="String" resultType="songAccountDTO">
        select *
        from song_account
        where song_no = #{songNo}
    </select>
    <select id="findSongAccountBalance" parameterType="Integer" resultType="songAccountDTO">
        SELECT sa.balance
        FROM song_account sa
        JOIN user u ON sa.song_no = u.song_no
        WHERE u.user_no = #{userNo}
    </select>
    <!-- 계좌 잔액 확인 -->
    <select id="selectAccountBalance" parameterType="string" resultType="double">
        select balance
        from account
        where account_no = #{accountNo}
            for update
    </select>

    <!-- 송이 계좌 잔액 확인 -->
    <select id="selectSongBalance" parameterType="string" resultType="double">
        select balance
        from song_account
        where song_no = #{songNo}
            for update
    </select>

    <!-- 원화 계좌 잔액 확인 -->
    <select id="selectKrwBalance" parameterType="string" resultType="double">
        select balance
        from krw_account
        where krw_no = #{krwNo}
            for update
    </select>

    <!-- 계좌 잔액 수정 -->
    <update id="updateAccount" parameterType="accountDTO">
        UPDATE account
        SET balance = #{balance}
            WHEN account_no = #{accountNo}
    </update>

    <!-- 송이 계좌 잔액 수정 -->
    <update id="updateSongAccount" parameterType="songAccountDTO">
        UPDATE song_account
        SET balance = #{balance}
            WHEN song_no = #{songNo}
    </update>

    <!-- 원화 잔액 수정 -->
    <update id="updateKrwAccount" parameterType="krwAccountDTO">
        UPDATE krw_account
        SET balance = #{balance}
            WHEN krw_no = #{krwNo}
    </update>
</mapper>